<% layout("/layouts/boilerplate") %>
<body>
    <h3>All Listings</h3>
    <div class="row row-cols-xl-6 row-cols-md-2 row-cols-sm-1 row-cols-1">
        <% for(let listing of allListing) {%>
            <a href="/listing/<%= listing._id %>" class="card index-card col" style="width: 12rem;">
                <img src="<%= listing.image.url  %>" class="card-img-top" alt="listing_image">
                <div class="card-body">
                    <p class="card-title"><%= listing.title %></p>
                    <p class="card-details">&#8377;<%= listing.price.toLocaleString("en-IN") %>/night</p>
                </div>
            </a>
        <% } %>
    </div>
</body>
