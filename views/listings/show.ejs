<% layout("/layouts/boilerplate") %>
<div class="row">
    <div class="col-8 offset-2">
        <h3><%= listing.title %></h3>
    </div>
    <div class="card col-6 offset-2">
        <img src="<%= listing.image.url %>"
        class="card-img-top show-img"
        alt="listing_image">
        <div class="card-body">
            <p class="card-text">
                <%= listing.description %> <br>
                &#8377; <%= listing.price.toLocaleString("en-IN") %> <br>
                <%= listing.location %> <br>
                <%= listing.country %>
            </p>
        </div>
        <div class="btns mt-1">
            <a href="/listing/<%= listing._id %>/edit"><Button class="btn btn-dark edit-btn">Edit</Button></a>
            <form method="POST" action="/listing/<%=listing._id%>?_method=DELETE">
                <button class="btn btn-dark offset-4 dlt-btn">Delete</button>
            </form>
        </div>
        <a href="/listing"><button class="btn btn-dark back-btn mt-2">Back to Home Page</button></a>
    </div>
</div>